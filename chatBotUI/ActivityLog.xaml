<Window x:Class="chatBotUI.ActivityLog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:chatBotUI"
      mc:Ignorable="d" 
      Title="ActivityLog"  Height="580" Width="810">

    <Grid>
        <Image Source="/Assets/backgroundThree.jpg" Stretch="fill"/>
        <Border VerticalAlignment="Top" Height="50" Background="White">
            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Activity Log" VerticalAlignment="Top" Foreground="Black" FontSize="30"/>
        </Border>
        <ListBox x:Name="ActivityLogList" Height="350" VerticalAlignment="Center"   Background="#90FFFFFF">

        </ListBox>
        <Button x:Name="showMore" 
                Content="Show More" 
                Width="800" 
                Height="30"
                Margin="0,0,0,75"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Click="ShowMore_Click" />
    </Grid>
</Window>
