<Window x:Class="chatBotUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chatBotUI"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="CyberBot" Height="580" Width="810">
    <Grid>
        <Image Source="/Assets/backgroundThree.jpg"
                           Stretch="Fill"
                           IsHitTestVisible="False" />
        <Border Background="white"  Padding="10" VerticalAlignment="Top" >
            <TextBlock Text="CyberBot Chat" 
                           Foreground="Black" 
                       Background="White"
                           FontWeight="Bold" 
                            HorizontalAlignment="Center"
                           VerticalAlignment="Top" 
                           FontSize="16"/>
        </Border >


        <Grid>
            <Border Background="#90FFFFFF" Height="380"  Width="720" CornerRadius="25" BorderBrush="LightGray" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
                <ScrollViewer 
                              VerticalScrollBarVisibility="Hidden"
                               Padding="10"
                          Style="{StaticResource ConversationWindow}"
                          x:Name="Scroller">
                    <Grid>
                        <StackPanel x:Name="ConversationStackPanel" />
                    </Grid>
                </ScrollViewer>
            </Border>

            <!-- Input area fixed to bottom -->
        </Grid>
        <Border
                    Style="{StaticResource WrapPanelBorder}"
                    Margin="0,10,0,10">
            <WrapPanel Style="{StaticResource WrapPanelStyle}" Width="354">
                <Border Style="{StaticResource TextBoxBorder}">
                    <TextBox Style="{StaticResource TextBoxStyle}"
                                 x:Name="UserText"
                                 TextWrapping="Wrap"
                                 Text="Ask a question"
                                 GotFocus="UserText_GotFocus"
                                 KeyDown="UserText_KeyDown" />
                </Border>
                <Border Style="{StaticResource SendButtonBorder}">
                    <Button Style="{StaticResource RoundButtonStyle}"
                                x:Name="SendButton"
                                Content=">"
                                Height="20"
                                Width="20"
                                Click="sendButton_Click" />
                </Border>
            </WrapPanel>
        </Border>
        <Grid x:Name="NamePromptOverlay"
              Background="#CC000000"
            HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Visibility="Visible"
              Panel.ZIndex="1000">
            <!-- on top -->
            <Border Background="White" Width="300" Height="110" CornerRadius="25">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                        Background="Transparent">
                <TextBlock Text="Please enter your name:" FontSize="16" Margin="0,0,0,10" FontFamily="Calibri" FontWeight="Bold" />
                <TextBox x:Name="UserNameTextBox" Width="260" Height="30" />
                <Button Content="Submit" Width="100" Height="30" Margin="0,10,0,0"
                        HorizontalAlignment="Center" Click="SubmitNameButton_Click" Background="Pink"/>
            </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
